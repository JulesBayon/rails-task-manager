<h1>TASKS</h1>

<% @tasks.each do |task| %>
 <% if task.completed == true %>
   <p><input type="checkbox" checked>
   <%= link_to task.title, task_path(task) %></p>
   <% else %>
     <p><input type="checkbox">
   <%= link_to task.title, task_path(task) %></p>
   <% end %>
   <%= link_to "Destroy task", destroy_path(task), method: :delete  %>
 <% end %>


<p><%= link_to "Add a new task", newtask_path %></p>
